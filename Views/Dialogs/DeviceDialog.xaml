        <!--         Margin="0,8,0,0" -->
        <!--         Foreground="{DynamicResource SystemControlErrorTextForegroundBrush}" -->
        <!--         Visibility="Collapsed" /> -->
        <!-- </StackPanel> -->
    </ikw:SimpleStackPanel>
</ui:ContentDialog>